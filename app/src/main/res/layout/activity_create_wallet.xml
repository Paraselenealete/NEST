<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <!--<variable-->
        <!--name=""-->
        <!--type="" />-->
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.lianer.nest.custom.TitlebarView
            android:id="@+id/titlebar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:background="@android:color/white"
            app:centerTitle="@string/create_wallet"
            app:leftDrawble="@drawable/back_left" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_rectangle_bg"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dp_15"
            android:paddingLeft="@dimen/dp_5"
            android:paddingRight="@dimen/dp_5"
            android:paddingTop="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_25"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_15"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_10"
                android:text="@string/create_wallet_warn_1"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                android:gravity="center_vertical"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/create_wallet_warn_2"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                android:gravity="center_vertical"/>


        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_60"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_15">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="@string/set_password"
                android:inputType="textPassword"
                android:drawableLeft="@drawable/password_lock"
                android:drawableStart="@drawable/password_lock"
                android:drawablePadding="@dimen/dp_10"
                android:paddingLeft="@dimen/dp_10"
                android:paddingStart="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:paddingEnd="@dimen/dp_10"
                android:textSize="14sp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/clr_EBEBEB"
                android:layout_alignParentBottom="true"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_15">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="@string/reinput_psd"
                android:inputType="textPassword"
                android:drawableLeft="@drawable/password_lock"
                android:drawableStart="@drawable/password_lock"
                android:drawablePadding="@dimen/dp_10"
                android:paddingLeft="@dimen/dp_10"
                android:paddingStart="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:paddingEnd="@dimen/dp_10"
                android:textSize="14sp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/clr_EBEBEB"
                android:layout_alignParentBottom="true"
                />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/agreement"
            android:drawableLeft="@drawable/selected_yes"
            android:drawableStart="@drawable/selected_yes"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_28"
            android:layout_marginStart="@dimen/dp_28"
            android:drawablePadding="@dimen/dp_10"
            android:textColor="@color/clr_999999"
            android:textSize="12sp"
            />

        <TextView
            android:id="@+id/create_wallet"
            android:layout_width="@dimen/dp_300"
            android:layout_height="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_100"
            android:background="@drawable/gradient_oval_btn"
            android:gravity="center"
            android:text="@string/create_wallet"
            android:textColor="@color/clr_F5F5F5"
            android:textSize="18sp"
            android:layout_gravity="center_horizontal"/>


    </LinearLayout>

</layout>