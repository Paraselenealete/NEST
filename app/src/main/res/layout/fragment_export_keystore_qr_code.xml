<?xml version="1.0" encoding="utf-8"?>
<layout >
    <data>
    </data>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="12dp"
            android:textSize="14sp"
            android:text="@string/safe_scan"
            android:textColor="@color/clr_111111"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:textSize="12sp"
            android:text="@string/scan_prompt"
            android:textColor="@color/clr_999999"
            android:lineSpacingExtra="2dp"/>

     <ImageView
         android:id="@+id/show_qr_code"
         android:layout_width="220dp"
         android:layout_height="220dp"
         android:src="@drawable/hide_qr_code"
         android:layout_gravity="center"
         android:layout_marginTop="36dp"
         android:layout_marginBottom="36dp"
         android:background="@drawable/frame_bg"
         android:padding="8dp"
         android:scaleType="centerCrop"
         android:adjustViewBounds="true"/>

        <Button
            android:id="@+id/btn_show"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="16dp"
            android:background="@drawable/gradient_oval_btn"
            android:text="@string/show_qr_code"
            android:textColor="@android:color/white"
            android:textAllCaps="false"/>

    </LinearLayout>

</layout>
