<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_wallet_assets"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_80"
    android:background="@drawable/circle_oval_bg"
    android:gravity="center_vertical"
    android:layout_marginBottom="@dimen/dp_10"
    android:layout_marginLeft="@dimen/dp_20"
    android:layout_marginRight="@dimen/dp_20">

    <TextView
        android:id="@+id/assets_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/clr_111111"
        android:textSize="14sp"
        android:text="ETH"
        android:drawableLeft="@drawable/invest_true"
        android:drawableStart="@drawable/invest_true"
        android:gravity="center_vertical"
        android:drawablePadding="@dimen/dp_10"
        />

    <TextView
        android:id="@+id/assets_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/clr_111111"
        android:textSize="14sp"
        android:text="2.00"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        />

</RelativeLayout>
